                                            button.btn.font-size-14
                                        .color-primary-bg.rounded-circle.p-2
                                            button.btn.font-size-14
                            .col-6
                                .qty.d-flex
                                    h6.font-baloo Qty
                                    .px-4.d-flex.font-rale
                                    button.qty-up.border.bg-light(data-id='pro1')
                                        i.fa.fa-angle-up
                                    input.qty-input.border.px-2.w-50.bg-light(type='text', disabled='', value='1', placeholder='1')
                                    button.qty-down.border.bg-light(data-id='pro2')
