extends ../layouts/layout

block content
    main#main-site
        section#product
            .container.py-5
                .row
                    .col-sm-6
                        img#main-product.img-fluid(src=product.pathImage, alt='Product')
                        .form-row.font-size-16.pt-4.font-baloo
                            .col
                                button.btn.btn-danger.text-white.form-control(type='submit') Proceed to Buy
                            .col
                                button.btn.btn-warning.text-dark.form-control(type='submit') Add to Card
                    .col-sm-6
                        h5.font-baloo.font-size-20.pt-5=product.title
                        small= 'by ' + product.author
                        .d-flex
                            .rating.text-warning.font-size-14
                                i.fa.fa-star
                                i.fa.fa-star
                                i.fa.fa-star
                                i.fa.fa-star
                                i.fa.fa-star
                            a.font-size-14.font-rale.px-2(href='#', style='color: #007bff') 20,534 ratings | 1000+ answered questions
                        hr.m-0
                        table.my-3
                            tr.font-rale.font-size-14
                                td M.R.P:
                                td
                                    small
                                        strike $162.00
                            tr.font-rale.font-size-14
                                td Deal Price:
                                td.font-size-20.text-danger
                                    | $
                                    span=product.price
                                    small.text-dark.font-size-12  Inclusive of all taxes
                            tr.font-rale.font-size-14
                                td You Save:
                                td.font-size-16.text-danger
                                    | $
                                    span=product.price
                        .d-flex
                            .return.text-center.mr-5
                                .font-size-20.my-2.color-second
                                    span.fa.fa-retweet.border.p-3.rounded-pill
                                a.font-rale.font-size-12(href='#')
                                    | 10 Days
                                    br
                                    | Replacement
                            .return.text-center.mr-5
                                .font-size-20.my-2.color-second
                                    span.fa.fa-truck.border.p-3.rounded-pill
                                a.font-rale.font-size-12(href='#')
                                    | Daily Tuition
                                    br
                                    | Deliverd
                            .return.text-center.mr-5
                                .font-size-20.my-2.color-second
                                    span.fa.fa-check.border.p-3.rounded-pill
                                a.font-rale.font-size-12(href='#')
                                    | 1 Year
                                    br
                                    | Warranty
                        hr
                        #order-details.font-rale.d-flex.flex-column.text-dark
