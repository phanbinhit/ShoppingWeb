                                a.font-rale.font-size-12(href='#')
                                    | 10 Days
                                    br
                                    | Replacement
                            .return.text-center.mr-5
                                .font-size-20.my-2.color-second
                                    span.fa.fa-truck.border.p-3.rounded-pill
